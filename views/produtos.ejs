<%- include('partials/header.ejs') %>
    <div class="app-container">
        <!-- Sidebar -->
        <%- include('partials/sidebar.ejs') %>
        <!-- Conteudo Principal -->
        <div class="main-content">
            <!-- nav bar superior -->
        <%- include('partials/navbar.ejs') %>
            <!-- conteudo do painel -->
            <div class="container-fluid">
        <h2 class="mb-1">Produtos</h2>
        <p class="text-muted mb-4">Gerencie todos os produtos cadastrados no sistema.</p>
        <div class="dashboard-card">
            <div class="table-responsive" style="max-width: 1000px; margin: 0;">
                <table class="table table-striped table-bordered table-hover table-sm">
                    <caption>Lista de Produtos</caption>
                    <thead>
                        <tr>
                            <th>Foto</th>
                            <th>Quantidade</th>
                            <th>Nome</th>
                            <th>Dimensões (cm)</th>
                            <th>Peso</th>
                            <th>Descrição</th>
                            <th>Valor</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% produtos.forEach(function(produto) { %>
                        <tr>
                            <td><img src="<%= produto.foto %>" alt="<%= produto.nome %>" class="img-fluid" style="max-width: 50px;"></td>
                            <td><%= produto.estoque %></td>
                            <td><%= produto.nome %></td>
                            <td><%= produto.dimensoes %></td>
                            <td><%= produto.peso %></td>
                            <td><%= produto.descricao %></td>
                            <td><%= produto.valor.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' }) %></td>
                        </tr>
                        <% }); %>
                    </tbody>
                </table>
            </div>
    </div>
        </div>
    </div>
<%- include('partials/footer.ejs') %>