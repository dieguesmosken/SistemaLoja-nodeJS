<div class="navbar py-3 mb-4">
  <div class="container-fluid">
    <div class="d-flex">
        <a href="/" class="navbar-brand d-flex align-items-center">
            <span class="logo-text">Classificação:</span>
            <!-- mostra a nota da empresa com base na media das notas das avaliações -->
            <span class="logo-rating ms-2">
                <% for(let i = 1; i <= 5; i++) { %>
                    <% if(i <= 4.5) { %>
                      <i class="bi bi-star-fill text-warning"></i>
                    <% } else { %>
                      <i class="bi bi-star"></i>
                    <% } %>
                  <% } %>
            </span>
        </a>
    </div>
    <div class="d-flex align-items-center">
      <div class="top-nav-icon">
        <i class="bi bi-sun"></i>
      </div>
      <div class="top-nav-icon">
        <i class="bi bi-search"></i>
      </div>
      <div class="top-nav-icon">
        <i class="bi bi-bell"></i>
      </div>
      <div class="top-nav-icon">
        <i class="bi bi-grid-3x3-gap"></i>
      </div>
      <div class="avatar ms-3">
        
        <a href="/perfil" class="d-flex align-items-center">
          <img src="https://picsum.photos/id/237/40" alt="User Avatar" class="rounded-circle me-2" />
          <span>Usuario</span>
        </a>
      </div>
    </div>
  </div>
</div>
